<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.imageviewer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.imageviewer.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.imageviewer.SampleImages"
            android:label="@string/sample_images"
            android:parentActivityName="com.example.imageviewer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.imageviewer.SampleImages" >
            </meta-data>
        </activity>
        <activity
            android:name="com.example.imageviewer.PhoneImages"
            android:label="@string/phone_images"
            android:parentActivityName="com.example.imageviewer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.imageviewer.PhoneImages" >
            </meta-data>
        </activity> <!-- TODO: picaso activity + web-related ImageViews -->
        <activity
            android:name="com.example.imageviewer.PicassoImages"
            android:label="Picasso Images"
            android:parentActivityName="com.example.imageviewer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.imageviewer.PicassoImages" >
            </meta-data>
        </activity>
        <activity
            android:name="com.example.imageviewer.SingleImageView"
            android:label="Single Image View" >
        </activity>
    </application>

</manifest>